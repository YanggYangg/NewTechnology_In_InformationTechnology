<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="index.css">
</head>

<body>
    <form action="/save" method="post">
        <input type="text" name="id" placeholder="Enter ID ..." /><br>
        <input type="text" name="name" placeholder="Enter name ..." /><br>
        <input type="text" name="course_type" placeholder="Enter course_type ..." /><br>
        <input type="text" name="semester" placeholder="Enter semester ..." /><br>
        <input type="text" name="department" placeholder="Enter department ..." /><br>

        <br>
        <button type="submit">Submit</button>
    </form>
    <div class="content">
        <table>
            <caption>Danh sach cac mon hoc</caption>

            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ten mon hoc</th>
                    <th>Loai mon hoc</th>
                    <th>Hoc ky</th>
                    <th>Khoa</th>
                </tr>
            </thead>

            <tbody>
                <% courses.forEach(item => { %>
                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.course_type %>
                        </td>
                        <td>
                            <%= item.semester %>
                        </td>
                        <td>
                            <%= item.department %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</body>

</html>